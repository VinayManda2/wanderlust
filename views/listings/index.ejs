<% layout("/layouts/boilerplate") %>


  
    <div id="filters">
      <div class="filter">
        <div> <i class="fa-solid fa-hotel"></i></div>
        <p>All</p>
       </div>
      <div class="filter">
       <div> <i class="fa-solid fa-fire"></i> </div>
       <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-hiking"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p> Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Igloos</p>
      </div>
      
      <div class="filter">
        <div><i class="fa-solid fa-house-chimney-window"></i></div>
        <p>Farms</p>
      </div> 
       <div class="filter">
        <div><i class="fa-solid fa-warehouse"></i></div>
        <p>Garages</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-building"></i></div>
        <p>Buildings</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tent"></i></div>
        <p>Tents</p> 
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bell-concierge"></i></div>
        <p>DineOuts</p> 
      </div>
      <div class="filter form-check form-switch ml-8">
        <input class="form-check-input mt-2" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label mt-1" for="flexSwitchCheckDefault"><b>Taxes</b></label>
      </div>
      
      
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card" style="width: 20rem;">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <h6 class="card-title"><%= listing.title %></h5>
            <p class="card-text d-inline">&#8377; <%= listing.price.toLocaleString("en-IN") %>/- night</p>
            <i id="tax-info">&nbsp; &nbsp; + 18% GST</i>
          </div>
        </div>
      </a>
        <% } %>
    </div>
    
 
