<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">signup on wanderlust</h1>
    <div class="col-8 offset-2">
        <form action="/signup" method="post" novalidate class="needs-validation">
            <div class="mt-3">
                <label for="userName" class="form-label">userName</label>
                <input name="userName" id="userName" placeholder="Add userName" type="text" class="form-control" required/>
                <div class="valid-feedback">
                    userName Looks good!
                </div>
            </div>
            <div class="mt-3">
                <label for="email" class="form-label">email</label>
                <input name="email" id="email" placeholder="Add email" type="email" class="form-control" required/>
            </div>
            <div class="mt-3">
                <label for="password" class="form-label">password</label>
                <input name="password" id="password" placeholder="Add password" type="password" class="form-control" required/>
            </div>
            <button class="btn btn-success mt-3">signup</button>
        </form>
    </div>
</div>